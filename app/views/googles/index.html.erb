<% provide(:title, "Google maps") %>
<p id="notice"><%= notice %></p>

<h1>Listing Googles</h1>

<script>
var map;
function initialize() {
  var mapOptions = {
    zoom: 7,
    center: new google.maps.LatLng(36.593055, 128.173464)
  };
  map = new google.maps.Map(document.getElementById('map-canvas'),
      mapOptions);

  <%= render @googles %>
}

google.maps.event.addDomListener(window, 'load', initialize);

initialize()
</script>

<div id="map-canvas"></div>

<div class="col-lg-6 col-lg-offset-3">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Latlng</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @googles.each do |google| %>
        <tr>
          <td><%= link_to google.latlng, google %></td>
          <td><%= link_to 'Edit', edit_google_path(google), class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', google, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Google', new_google_path, class: "btn btn-lg btn-primary" %>
